@model List<ReservaVista>
<div class="container">
    <div class="col-12">
        <div class="card border shadow-xs mb-4">
            <div class="card-header border-bottom pb-0">
                <div class="d-sm-flex align-items-center mb-3">
                    <div>
                        <h6 class="font-weight-semibold text-lg mb-0">Recent transactions</h6>
                        <p class="text-sm mb-sm-0">These are details about the last transactions</p>
                    </div>
                    <div class="ms-auto d-flex">
                        <div class="input-group input-group-sm ms-auto me-2">
                            <form id="buscarReservasForm">
                            <span class="input-group-text text-body">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16px" height="16px" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z"></path>
                                </svg>
                            </span>
                            <input type="text" name="buscarReservas" class="form-control form-control-sm" placeholder="Search">
                            </form>
                        </div>
                        <button type="button" class="btn btn-sm btn-dark btn-icon d-flex align-items-center mb-0 me-2">
                            <span class="btn-inner--icon">
                                <svg width="16" height="16" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="d-block me-2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3" />
                                </svg>
                            </span>
                            <span class="btn-inner--text">Download</span>
                        </button>
                    </div>
                </div>
            </div>
            <div id="tabla" class="card-body px-0 py-0">
                <div class="table-responsive p-0">
                    <table class="table align-items-center justify-content-center mb-0">
                        <thead class="bg-gray-100">
                            <tr>
                                <th class="text-secondary text-xs font-weight-semibold opacity-7">Lugar</th>
                                <th class="text-secondary text-xs font-weight-semibold opacity-7 ps-2">Conductor</th>
                                <th class="text-secondary text-xs font-weight-semibold opacity-7 ps-2">Fecha</th>
                                <th class="text-secondary text-xs font-weight-semibold opacity-7 ps-2">Reserva</th>
                                <th class="text-secondary text-xs font-weight-semibold opacity-7 ps-2">Tarjeta</th>
                                <th class="text-secondary text-xs font-weight-semibold opacity-7 ps-2">Usuario</th>
                                <th class="text-center text-secondary text-xs font-weight-semibold opacity-7"></th>
                                <th class="text-center text-secondary text-xs font-weight-semibold opacity-7"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ReservaVista item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex px-2">
                                            
                                            <div class="my-auto">
                                                <h6 class="mb-0 text-sm">@item.Lugar</h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="text-sm font-weight-normal mb-0">@item.Conductor</p>
                                    </td>
                                    <td>
                                        <h6 class="mb-0 text-sm font-weight-semibold">@item.FechaRecogida</h6>
                                        <p class="text-sm text-secondary mb-0">@item.FechaDevuelto</p>

                                    </td>
                                    <td>
                                        <span class="badge badge-sm border border-success text-success bg-success">
                                            <svg width="9" height="9" viewBox="0 0 10 9" fill="none" xmlns="http://www.w3.org/2000/svg" stroke="currentColor" class="me-1">
                                                <path d="M1 4.42857L3.28571 6.71429L9 1" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                            </svg>
                                            @item.ReservaEstado
                                        </span>
                                    </td>
                                    <td class="align-middle">
                                        <div class="d-flex">
                                            <div class="border px-1 py-1 text-center d-flex align-items-center border-radius-sm my-auto">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-credit-card" viewBox="0 0 16 16">
                                                    <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v1h14V4a1 1 0 0 0-1-1zm13 4H1v5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1z" />
                                                    <path d="M2 10a1 1 0 0 1 1-1h1a1 1 0 0 1 1 1v1a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1z" />
                                                </svg>
                                            </div>
                                            <div class="ms-2">
                                                <p class="text-dark text-sm mb-0">Visa 1234</p>
                                                <p class="text-secondary text-sm mb-0">Expiry 06/2026</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="text-sm font-weight-normal mb-0">@item.NombreUsuario</p>
                                    </td>
                                    <td class="align-middle">
                                        <a href="javascript:;" class="text-secondary font-weight-bold text-xs" data-bs-toggle="tooltip" data-bs-title="Edit user">
                                            <svg width="14" height="14" viewBox="0 0 15 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M11.2201 2.02495C10.8292 1.63482 10.196 1.63545 9.80585 2.02636C9.41572 2.41727 9.41635 3.05044 9.80726 3.44057L11.2201 2.02495ZM12.5572 6.18502C12.9481 6.57516 13.5813 6.57453 13.9714 6.18362C14.3615 5.79271 14.3609 5.15954 13.97 4.7694L12.5572 6.18502ZM11.6803 1.56839L12.3867 2.2762L12.3867 2.27619L11.6803 1.56839ZM14.4302 4.31284L15.1367 5.02065L15.1367 5.02064L14.4302 4.31284ZM3.72198 15V16C3.98686 16 4.24091 15.8949 4.42839 15.7078L3.72198 15ZM0.999756 15H-0.000244141C-0.000244141 15.5523 0.447471 16 0.999756 16L0.999756 15ZM0.999756 12.2279L0.293346 11.5201C0.105383 11.7077 -0.000244141 11.9624 -0.000244141 12.2279H0.999756ZM9.80726 3.44057L12.5572 6.18502L13.97 4.7694L11.2201 2.02495L9.80726 3.44057ZM12.3867 2.27619C12.7557 1.90794 13.3549 1.90794 13.7238 2.27619L15.1367 0.860593C13.9869 -0.286864 12.1236 -0.286864 10.9739 0.860593L12.3867 2.27619ZM13.7238 2.27619C14.0917 2.64337 14.0917 3.23787 13.7238 3.60504L15.1367 5.02064C16.2875 3.8721 16.2875 2.00913 15.1367 0.860593L13.7238 2.27619ZM13.7238 3.60504L3.01557 14.2922L4.42839 15.7078L15.1367 5.02065L13.7238 3.60504ZM3.72198 14H0.999756V16H3.72198V14ZM1.99976 15V12.2279H-0.000244141V15H1.99976ZM1.70617 12.9357L12.3867 2.2762L10.9739 0.86059L0.293346 11.5201L1.70617 12.9357Z" fill="#64748B" />
                                            </svg>
                                        </a>
                                    </td>
                                    <td class="align-middle">
                                        <a asp-controller="Reservas"
                                           asp-action="Delete" asp-route-id="@item.IdReserva" class="text-secondary font-weight-bold text-xs" data-bs-toggle="tooltip" data-bs-title="Editar usuario">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                                                <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5" />
                                            </svg>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .container {
        margin-left: 10%;
        margin-top: 5%;
    }
</style>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#buscarReservasForm').on('submit', function (e) {
                e.preventDefault(); // Previene el envío del formulario de la manera tradiciona
                $.ajax({
                    url: '/Reservas/BuscarReservas', // Asegúrate de que esta URL coincida con la acción de tu controlador
                    type: 'POST',
                    data: $(this).serialize(), // Serializa los datos del formulario
                    success: function (data) {
                        $('#tabla').html(data); // Actualiza el contenido del div con los resultados de la búsqueda
                    },
                    console.log("");
                    error: function () {
                        alert('Error al realizar la búsqueda.');
                    }
                }).done(function (data) {
                    // Manejo de éxito
                }).fail(function (jqXHR, textStatus, errorThrown) {
                    console.error("Error en la llamada AJAX: " + textStatus + ", " + errorThrown);
                });;
            });
        });
    </script>
}